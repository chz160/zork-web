{
  "name": "zork-web",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint \"src/**/*.{ts,html}\"",
    "lint:fix": "eslint \"src/**/*.{ts,html}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,html,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,css,json}\"",
    "prepare": "husky",
    "build:tools": "tsc -p tools/tsconfig.json",
    "convert": "npm run build:tools && node dist/tools/converter/cli.js",
    "___comment___": "TEMPORARY SCRIPTS (validate:rooms, fix:rooms) - Can be removed after room data quality issues are fixed (issue #78)",
    "validate:rooms": "npm run build:tools && node dist/tools/validate-rooms.js",
    "fix:rooms": "npm run build:tools && node dist/tools/apply-canonical-fixes.js",
    "validate:data": "npm run build:tools && node dist/tools/validate-data-quality.js",
    "audit:properties": "npm run build:tools && node dist/tools/audit-property-coverage.js",
    "___comment_phase3___": "Phase 3 Scripts - Message Mapping & Canonical Data Integration",
    "map:messages": "npm run build:tools && node dist/tools/map-canonical-messages.js",
    "populate:canonical": "npm run build:tools && node dist/tools/populate-canonical-data.js",
    "validate:mapping": "npm run build:tools && node dist/tools/validate-message-mapping.js",
    "phase3:all": "npm run map:messages && npm run populate:canonical && npm run validate:mapping"
  },
  "lint-staged": {
    "*.{ts,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json}": [
      "prettier --write"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "rxjs": "~7.8.0",
    "serve-handler": "^6.1.6",
    "three": "^0.181.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^20.4.0",
    "@angular-eslint/eslint-plugin": "^20.4.0",
    "@angular-eslint/eslint-plugin-template": "^20.4.0",
    "@angular-eslint/template-parser": "^20.4.0",
    "@angular/build": "^20.3.7",
    "@angular/cli": "^20.3.7",
    "@angular/compiler-cli": "^20.3.0",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.9.1",
    "@types/three": "^0.181.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.1.5",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.2.6",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.46.2"
  }
}
